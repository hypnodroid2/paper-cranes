{
  "name": "paper-cranes",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx http-server -c -1 -p 6969 ./dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:webpack": "ls && webpack --mode=production",
    "build:shader": "npx webpack-glsl-minify $f --ext=\"\" --output sourceOnly --includesOnly -o dist",
    "build": "concurrently \"npm run build:webpack\" \"npm run build:shaders\"",
    "build:shaders": "rm dist/shaders/*; for f in ./shaders/*; do npm run build:shader $f & done; wait",
    "dev": "concurrently \"npm run start\" \"npm run watch:build\"",
    "watch:build": "fswatch -o --exclude '\\.git' --exclude 'dist/' . | xargs -n1 -I{} npm run build",
    "format": "eslint --fix ."
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "three": "^0.159.0",
    "twgl.js": "^4.24.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "image-minimizer-webpack-plugin": "^3.8.3",
    "image-webpack-loader": "^8.1.0",
    "live-server": "^1.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-glsl-minify": "^1.5.0",
    "worker-loader": "^3.0.8"
  }
}
