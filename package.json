{
  "name": "paper-cranes",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx live-server -q --port=6969 ./dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node ./esbuild.js & npm run build:shaders",
    "dev": "npm run build && concurrently \"npm run start\" \"npm run build:watch\"",
    "build:watch": "nodemon --ignore node_modules/ --ignore dist/ --ext '*' --watch . --exec \"npm run build\"",
    "format": "eslint --fix .",
    "build:shaders": "mkdir -p dist/shaders; for shader in shaders/*.frag; do glslify -t 'glslify-import' ./$shader -o ./dist/shaders/$(basename $shader) & done;",
    "build:shaders:test": "glslify -t 'glslify-import' ./shaders/beat-trip.frag -o ./dist/shaders/beat-trip.frag"
  },
  "glslify": {
    "transform": [
      [
        "glslify-import"
      ]
    ]
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "twgl.js": "^4.24.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-css-modules": "^0.3.0",
    "esbuild-plugin-html": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glsl-hsl2rgb": "^1.1.0",
    "glslify": "^7.1.1",
    "glslify-import": "^3.1.0",
    "live-server": "^1.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "ncp": "^2.0.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.1.1"
  }
}
